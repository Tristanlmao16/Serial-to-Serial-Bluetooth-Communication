#include "BluetoothSerial.h"

BluetoothSerial serialBT;
char cmd;

void setup()
{
  serialBT.begin("Esp32-BT");
  pinMode(18, OUTPUT);
}

void loop()
{
  if(serialBT.available()){
    cmd = serialBT.read();
  }
  if(cmd == '1'){
    serialBT.print("Hello There!");
  }
  if(cmd == '0'){
    serialBT.print("Goodbye!");
  }
  delay(20);
}